<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="25dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/arrowBackImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Arrow Back Icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT US"
        android:textSize="30dp"
        android:fontFamily="@font/normal"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:fontFamily="@font/regular"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developer"
        android:fontFamily="@font/normal"
        android:paddingTop="50dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/duo" />

    <TextView
        android:id="@+id/namaAnggota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nanda Alifia Khaironnisa (2103421037) "
        android:fontFamily="@font/italic"
        android:textSize="18sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/namaAnggota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nurul ilmi (2103421041)"
        android:fontFamily="@font/italic"
        android:textStyle="italic"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BM5B"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/medium"
        android:textSize="18sp" />

</LinearLayout>
